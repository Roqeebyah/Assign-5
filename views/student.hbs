<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{student.firstName}} {{student.lastName}} - Student: {{student.studentNum}}</h2>
        <hr />

        <form method="post" action="/student/update">
            <input type="hidden" name="studentNum" value="{{student.studentNum}}" />

            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="{{student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="{{student.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" value="{{student.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text" value="{{student.addressStreet}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" name="addressCity" type="text" value="{{student.addressCity}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" name="addressProvince" type="text" value="{{student.addressProvince}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>TA:</label>
                            <input type="checkbox" name="TA" {{#if student.TA}}checked{{/if}} />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Status:</label><br />
                            <input type="radio" name="status" value="Full Time" {{#equal student.status "Full Time"}}checked{{/equal}}> Full Time<br />
                            <input type="radio" name="status" value="Part Time" {{#equal student.status "Part Time"}}checked{{/equal}}> Part Time
                        </div>
                    </div>
                    <div class="col-md-8">
                         <div class="form-group">
                              <label>Course:</label>
                              <select class="form-control" name="course">
                                   <option value="1" {{#equal student.course "1"}}selected{{/equal}}>Course 1</option>
                                   <option value="2" {{#equal student.course "2"}}selected{{/equal}}>Course 2</option>
                                   <option value="3" {{#equal student.course "3"}}selected{{/equal}}>Course 3</option>
                                   <option value="4" {{#equal student.course "4"}}selected{{/equal}}>Course 4</option>
                                   <option value="5" {{#equal student.course "5"}}selected{{/equal}}>Course 5</option>
                                   <option value="6" {{#equal student.course "6"}}selected{{/equal}}>Course 6</option>
                                   <option value="7" {{#equal student.course "7"}}selected{{/equal}}>Course 7</option>
                                   <option value="8" {{#equal student.course "8"}}selected{{/equal}}>Course 8</option>
                                   <option value="9" {{#equal student.course "9"}}selected{{/equal}}>Course 9</option>
                                   <option value="10" {{#equal student.course "10"}}selected{{/equal}}>Course 10</option>
                                   <option value="11" {{#equal student.course "11"}}selected{{/equal}}>Course 11</option>
                              </select>
                         </div>
                    </div>
               </div>
          </fieldset>


        <div class="row">
            <div class="col-md-12">
                <br />
                <button type="submit" class="btn btn-primary">Update Student</button>
            </div>
        </div>
    </form>

</main>
</div>